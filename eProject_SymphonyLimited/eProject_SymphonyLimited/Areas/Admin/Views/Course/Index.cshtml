

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Time
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            Subject
        </th>
        <th>
            Certificate
        </th>
        <th>
            Image
        </th>
        <th>
            Category
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.Courses)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Time
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Subject
            </td>
            <td>
                @item.Certificate
            </td>
            <td>
                @item.Image
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EntityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EntityId })
            </td>
        </tr>
    }

</table>
