@model eProject_SymphonyLimited.Models.RegisterInfo

@{
    ViewBag.Title = "EntranceExam";
}


<div class="mainEE">
    <div class="containerEE flex">
        <div class="midEE">
            <div class="courseItem flex">
                @{if (ViewBag.Adms != null)
                    {
                        foreach (var item in ViewBag.Adms)
                        {
                            <div class="course cusCourseItem">
                                <a href="~/Home/AdmissionDetail/@item.EntityId" style="text-decoration:none">
                                    <div class="img">
                                        <img src="~/Areas/Admin/Content/img/@item.Course" alt="" width="100%" height="200px">
                                    </div>
                                    <div class="description">
                                        <span>@item.Name</span>
                                    </div>
                                    <div class="rd" style="border: 1px solid #e5e5e5; border-top: none;border-bottom: none">
                                        <span>End: <span class="time" id="et">@item.EndTime</span></span>
                                    </div>
                                    <div class="moreInfor ">
                                        <div class="containerMoreInfor flex">
                                            <div class="admissionCriteria width80">
                                                <span>
                                                    <i class="fas fa-users"></i> 
                                                </span>
                                            </div>
                                            <div class="price width20">
                                                <span>$ @item.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <h3>No Admission</h3>
                    }
                }
            </div>
            <div class="flex">
                <div class="pages width50">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <li class="active mr-1">
                                    <a href="javascript:void(0)" data-page-id="@i">
                                        <button class="btn btn-info">@i</button>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="item_page mr-1" href="javascript:void(0)" data-page-id="@i">
                                        <button class="btn btn-info">@i</button>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="field limiter width50" style="margin: auto">
                    <div class="flex" style="float:right">
                        <span style="margin: auto">Show</span>
                        <div class="control" style="margin: 0 10px">
                            <select id="limiter" class="limiter-options" style="padding: 4px">
                                @if (ViewBag.Limiter == 24)
                                {
                                    <option value="06">6</option>
                                    <option value="12">12</option>
                                    <option value="24" selected>24</option>
                                }
                                else if (ViewBag.Limiter == 6)
                                {
                                    <option value="06" selected>6</option>
                                    <option value="12">12</option>
                                    <option value="24">24</option>
                                }
                                else
                                {
                                    <option value="06">6</option>
                                    <option value="12" selected>12</option>
                                    <option value="24">24</option>
                                }
                            </select>
                        </div>
                        <span class="limiter-text" style="margin: auto">items on the page</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    @*var et = '@ViewBag.admById.EndTime';
    et = et.split(' ')[0];
    document.getElementById("end-time").innerHTML = et;*@
</script>
