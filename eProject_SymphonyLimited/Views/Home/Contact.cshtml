@{ ViewBag.Title = "Contact"; }

<div class="ContactUsMain">
    <div class="bannerContactUs">
        <div class="containerBannerContactUs">
            <div class="title">
                <span class="cusSpan">Contact Us</span>
            </div>
        </div>
    </div>
    <div class="containerContactUs">
        <div class="title">
            <span>
                Contact us
            </span>
            <p>
                With a team of enthusiastic consultants, 24/7 support will help you answer any questions about Symphony Limited's products and training programs.
            </p>
        </div>
        <div class="content flex">
            <div class="phone flex cusItemContact">
                <div class="item">
                    <div class="icon width100" style="margin: 20px 0">
                        <img src="https://bachkhoa-aptech.edu.vn/public/assets/imgs/themes/icon-smartphone.png" alt="Alternate Text"/>
                    </div>
                    <div class="detail width100" style="margin: 10px 0; height: 44px">
                        <span>0123456673</span>
                    </div>
                    <div class="description width100" style="margin: 20px 0">
                        <span>Support 24/7 - Online 24 hours</span>
                    </div>
                </div>
            </div>
            <div class="address flex cusItemContact">
                <div class="item">
                    <div class="icon width100" style="margin: 20px 0">
                        <img src="https://bachkhoa-aptech.edu.vn/public/assets/imgs/themes/icon-location.png" alt="Alternate Text"  height="63px"/>
                    </div>
                    <div class="detail width100" style="margin: 10px 0; height: 44px">
                        <span>250 Hoàng Quốc Việt, Bắc Từ Liêm, Hà Nội.</span>
                    </div>
                    <div class="description width100" style="margin: 20px 0">
                        <span>Thứ 2-7: 8.00 - 17.30</span>
                    </div>
                </div>
            </div>
            
            <div class="email flex cusItemContact">
                <div class="item">
                    <div class="icon width100" style="margin: 20px 0">
                        <img src="https://bachkhoa-aptech.edu.vn/public/assets/imgs/themes/icon-email.png" alt="Alternate Text" height="63px"/>
                    </div>
                    <div class="detail width100" style="margin: 10px 0; height: 44px">
                        <span>tuyensinh@bachkhoa-aptech.edu.vn</span>
                    </div>
                    <div class="description width100" style="margin: 20px 0">
                        <span>Thứ 2-7: 8.00 - 17.30</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="formRegister">
            <form>
                <div class="title">
                    <span>Register</span>
                </div>
                <div class="containerForm">
                    <div class="form-row flex">
                        <div class="left">
                            <input type="type" name="name" value="" placeholder="Fullname*" />
                        </div>
                        <div class="right">
                            <input type="type" name="name" value="" placeholder="Email*" />
                        </div>
                    </div>
                    <div class="form-row flex">
                        <div class="left">
                            <input type="type" name="name" value="" placeholder="Phone*" />
                        </div>
                        <div class="right">
                            <select name="cars" id="cars">
                                <option selected>Choose course</option>
                                <option value="saab">Saab</option>
                                <option value="mercedes">Mercedes</option>
                                <option value="audi">Audi</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <textarea rows="10" placeholder="Give us questions"></textarea>
                    </div>
                </div>
                <div class="form-btn">
                    <button type="submit">Send</button>
                </div>
            </form>
        </div>

    </div>
    <div class="mapContact">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.6576008138977!2d105.78126221534751!3d21.04638198598892!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab3b4220c2bd%3A0x1c9e359e2a4f618c!2sB%C3%A1ch%20Khoa%20Aptech!5e0!3m2!1svi!2s!4v1628077954173!5m2!1svi!2s"
                width="100%" height="500px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>

</div>