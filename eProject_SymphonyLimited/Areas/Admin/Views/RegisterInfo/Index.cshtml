@model IEnumerable<eProject_SymphonyLimited.Models.RegisterInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Register Infos</h2>

<div class="form-inline mb-3 float-right">
    <div class="input-group">
        <label class="font-weight-bold m-0 mr-1 d-flex align-items-center">Search : </label>
        <input type="text" name="key" id="key" value="" class="form-control mr-1 bg-light border-0 small" placeholder="Enter to search..." aria-label="Search" aria-describedby="basic-addon2">
    </div>
    <div class="input-group">
        <label class="font-weight-bold m-0 mr-1 d-flex align-items-center">Search By : </label>
        <select id="type" class="form-control">
            <option value="EntityId" selected>Entity Id</option>
            <option value="Name">Name</option>
        </select>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered"></table>
</div>

<ul class="pagination"></ul>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            var getUrl = window.location;
            var baseUrl = getUrl.protocol + "//" + getUrl.host + "/";
            var manager = {
                load: function (page = 1, type = null, key = null) {
                    $.ajax({
                        type: "GET",
                        url: baseUrl + "Admin/RegisterInfo/Get",
                        data: { page: page, type: type, key: key },
                        success: function (res) {
                            var _html = ' <thead class="thead-dark"><tr><th>Entity Id</th>><th>Name</th><th>Phone</th><th>Email</th><th>Comment</th><th>Action</th></tr></thead>';
                            for (var item of JSON.parse(res.Data)) {
                                _html += '<tbody><tr>' +
                                    '<td>' + item.EntityId + '</td>' +
                                    '<td>' + item.Name + '</td>' +
                                    '<td>' + item.Phone + '</td>' +
                                    '<td>' + item.Email + '</td>' +
                                    '<td>' + item.Comment + '</td>' +
                                    '<td>' +
                                    '<button class="btn btn-danger btn-delete mb-1" data-id="' + item.EntityId + '">Delete</button>' +
                                    '</td>'
                                    + '</tr></tbody>';
                            }
                            $('.table').html(_html);
                            var pages = '';
                            for (var i = 1; i <= res.TotalPages; i++) {
                                if (i == res.CurrentPage) {
                                    pages += '<li class="active mr-1"><a href="javascript:void(0)"><button class="btn btn-info">' + i + '</button></a></li>';
                                } else {
                                    pages += '<li><a class="item_page mr-1" href="javascript:void(0)"><button class="btn btn-info">' + i + '</button></a></li>';
                                }
                            }
                            $(".pagination").html(pages);
                        }
                    })
                },
            }
            manager.load();
            $(document).on("click", ".item_page", function () {
                var page = $(this).text(),
                    key = $('#key').val(),
                    type = $("#type").val();
                manager.load(page, type, key);
            });
            $('#key').keyup(function () {
                var key = $("#key").val(),
                    type = $("#type").val();
                manager.load(1, type, key);
            });
            $(document).on("change", "#type", function () {
                var key = $("#key").val(),
                    type = $("#type").val();
                manager.load(1, type, key);
            });
            $(document).on("click", ".btn-delete", function () {
                var id = $(this).data("id");
                if (confirm('Are you sure want delete partner with id = ' + id + '?')) {
                    window.location.href = baseUrl + "Admin/Teacher/Delete/" + id;
                } else {
                    return false;
                }
            });
        });
    </script>
}