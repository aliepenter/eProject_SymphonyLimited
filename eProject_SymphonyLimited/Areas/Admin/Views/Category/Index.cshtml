@{
    ViewBag.Title = "Categories";
}
<h2>Categories</h2>
<p>@ViewBag.ErrorMessage</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="form-inline">
    <input type="search" name="key" id="key" value="" />
    <select id="type">
        <option value="EntityId" selected>Id</option>
        <option value="Name">Name</option>
        <option value="ParentId">Parent Id</option>
    </select>
</div>
<table class="table"></table>
<ul class="pagination"></ul>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            var getUrl = window.location;
            var baseUrl = getUrl.protocol + "//" + getUrl.host + "/";
            var manager = {
                load: function (page = 1, type = null, key = null) {
                    $.ajax({
                        type: "GET",
                        url: baseUrl + "Admin/Category/Get",
                        data: { page: page, type: type, key: key },
                        success: function (res) {
                            var _html = '<tr><th>Id</th><th>Name</th><th>Parent Id</th><th></th></tr>';
                            for (var item of JSON.parse(res.Data)) {
                                _html += '<tr>' +
                                    '<td>' + item.EntityId + '</td>' +
                                    '<td>' + item.Name + '</td>' +
                                    '<td>' + item.ParentId + '</td>' +
                                    '<td>' +
                                    '<button class="btn btn-warning btn-edit mr-1" data-id="' + item.EntityId + '">Edit</button>' +
                                    '<button class="btn btn-danger btn-delete" data-id="' + item.EntityId + '">Delete</button>' +
                                    '</td>'
                                    + '</tr>';
                            }
                            $('.table').html(_html);
                            var pages = '';
                            for (var i = 1; i <= res.TotalPages; i++) {
                                if (i == res.CurrentPage) {
                                    pages += '<li class="active mr-1"><a href="javascript:void(0)"><button class="btn btn-info">' + i + '</button></a></li>';
                                } else {
                                    pages += '<li><a class="item_page mr-1" href="javascript:void(0)"><button class="btn btn-info">' + i + '</button></a></li>';
                                }
                            }
                            $(".pagination").html(pages);
                        }
                    })
                }
            }
            manager.load();
            $(document).on("click", ".btn-edit", function () {
                var id = $(this).data("id");
                window.location.href = baseUrl + "Admin/Category/Edit/" + id;
            });
            $(document).on("click", ".item_page", function () {
                var page = $(this).text(),
                    key = $('#key').val(),
                    type = $("#type").val();
                manager.load(page, type, key);
            });
            $('#key').keyup(function () {
                var key = $("#key").val(),
                    type = $("#type").val();
                manager.load(1, type, key);
            });
            $(document).on("click", ".btn-delete", function () {
                var id = $(this).data("id");
                if (confirm('Are you sure want delete category with id = ' + id + '?')) {
                    window.location.href = baseUrl + "Admin/Category/Delete/" + id;
                } else {
                    return false;
                }
            });
        });
    </script>
}