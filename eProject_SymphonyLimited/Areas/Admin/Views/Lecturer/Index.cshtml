@model IEnumerable<eProject_SymphonyLimited.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Specialize
        </th>
        <th>
            Subject
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.Lecturers)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Specialize
            </td>
            <td>
                @item.Subject
            </td>
            <td>
                <img src="~/Areas/Admin/Content/img/Teacher/@item.Image" alt="Alternate Text" width="100px" height="100px"/>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EntityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EntityId })
            </td>
        </tr>
    }

</table>

